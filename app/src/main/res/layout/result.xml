<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:hint="Valor bruto do investimento" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultadoRendimentoBruto"
        android:hint="Resultado Rendimento"
        android:textColor="#03A9F4"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="10sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:columnCount="2"
        android:rowCount="2">

        <!-- Texto para Resultado Rendimento Liquido -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:hint="Resultado Rendimento Liquido"
            android:textAlignment="center"
            android:textSize="17sp" />

        <!-- Valor do Resultado Rendimento Liquido -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:id="@+id/resultadoRendimentoLiquido"
            android:hint="Resultado Rendimento Liquido"/>

        <!-- GridLayout interno, ocupando 2 linhas -->
        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:rowCount="4"
            android:columnCount="1">

            <!-- Texto para IR -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:hint="IR"/>

            <!-- Valor do Imposto de Renda -->
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:textAlignment="center"
                android:textColor="#F44336"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/resultadoImpostoDeRenda"
                android:hint="Imposto de Renda"/>
        </GridLayout>

        <!-- GridLayout interno, ocupando 2 linhas -->
        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:rowCount="4"
            android:columnCount="1">

            <!-- Texto para Lucro -->
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:textAlignment="center"
                android:textSize="13sp"
                android:hint="Lucro"/>

            <!-- Valor do Lucro -->
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:textAlignment="center"
                android:textColor="#2196F3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/resultadoLucro"
                android:hint="Lucro"/>
        </GridLayout>
    </GridLayout>

    <TextView
        android:layout_marginTop="15sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="13sp"
        android:textStyle="normal"
        android:hint="Valor Aplicado"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultadoInvestimento"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:hint="Resultado Investimento" />

    <TextView
        android:layout_marginTop="15sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="13sp"
        android:textStyle="normal"
        android:hint="Tempo de Aplicação"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:id="@+id/resultadoData"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:hint="Resultado Data" />

    <TextView
        android:layout_marginTop="15sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="13sp"
        android:textStyle="normal"
        android:hint="Taxa Anual"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultadoPorcentagem"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:hint="Resultado Porcentagem" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Outros elementos aqui -->

        <Button
            android:id="@+id/voltar"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/rounded_button"
            android:hint="Voltar" />

    </RelativeLayout>

</LinearLayout>
